@model HomeDetailsViewModel

@{

    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "no-image.jpg");
    
}

<h3>@Model.PageTitle</h3>

<div class="row justify-content-center" m-3>
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center" style="background-color: red;">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body">
                <img class="card-img-top" src="@photoPath" width="75" height="75"  asp-append-version="true"/>
                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Name: @Model.Employee.Name</h4>
                <h4>Department: @Model.Employee.Department</h4>
                <h4>Comments: @Model.Employee.Coomments</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-action="edit" asp-controller="home"
                   asp-route-id="@Model.Employee.Id"
                 class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    </div>

</div>






